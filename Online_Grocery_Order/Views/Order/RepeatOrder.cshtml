@model IEnumerable<Online_Grocery_Order.Models.Account>

@{
    ViewBag.Title = "RepeatOrder";
    Layout = "~/Views/Shared/admin.cshtml";
}

<link href="~/notification/css/style.css" rel="stylesheet" />
<link href="~/css/font-awesome.min.css" rel="stylesheet" />
<div class="container">
    <section class="section-50">
        <h3 class="m-b-50 heading-line">Repeat Orders (@Session["Repeat_Order"])</h3>

        <div class="notification-ui_dd-content">


            @foreach (var file in Model)
            {
                @*<h5>Order ID: @file.order_ID</h5>*@
                <div class="notification-list notification-list--unread">
                    <div class="notification-list_content">
                        <div class="notification-list_img">
                            @if (file.Account_img != null)
                            {
                                String img64 = Convert.ToBase64String(file.Account_img);
                                String img64Url = string.Format("data:image/" + file.type_img + ";base64,{0}", img64);
                                <img src='@img64Url' style="max-width:100px;max-height:100px" / >
                            }
                            else
                            {
                                <img src="~/images/logo2.png">
                            }

                        </div>
                        <div class="notification-list_detail">
                            <p style="font-size:20px;"><b>@file.Full_Name</b> (Order No: @file.order_ID)</p>
                            <p class="text-muted" style="font-size:15px;">@file.Address</p>
                            <p class="text-muted" style="font-size:17px;">@file.Register_Date</p>
                            <p class="text-muted" style="font-size:15px;color:blue;"><b>Period: </b>After @file.period Days My Order Repeat</p>
                        </div>
                    </div>
                    <div class="notification-list_feature-img" align="center">
                        <div class="link-product-add">
                            <a href='@Url.Action("OrdersDetailsAdmin", "Order", new { id = file.order_ID, name=file.Full_Name,address=file.Address })' id="a1"><img src="~/assets/images/details.png" style="width:40px;height:40px;padding-right:20px;" /></a>
                        </div>
                        @*<div class="link-product-add">
                                <a href='@Url.Action("Auto_Generate_Order", "Order",new { id = file.order_ID,uid=file.id,address=file.Address })' id="a1"><i class="fa fa-check" style="font-size:35px;color:green"></i></a>
                            </div>*@
                    </div>
                </div>
            }



        </div>
    </section>
</div>
<style>
    /* unvisited link */
    #a1:link {
        color: white;
    }

    .a1:link {
        color: white;
    }

    /* visited link */
    #a1:visited {
        color: white;
    }

    /* mouse over link */
    #a1:hover {
        color: orange;
    }

    /* selected link */
    #a1:active {
        color: blue;
    }
</style>