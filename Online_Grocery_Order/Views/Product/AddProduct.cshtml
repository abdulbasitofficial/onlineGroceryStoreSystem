                                    @Html.EditorFor(model => model.Product_Name, new { htmlAttributes = new { @class = "form-control", onkeypress = "return AllowAlphabet(event)", style = "text-align:left;font-size:20px;height:40px;border-radius:30px;;width:500px;" } })
