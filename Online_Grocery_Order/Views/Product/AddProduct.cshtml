            <div class="card-heading"></div>
            <div class="card-body">
                <h2 class="title">Add Product</h2>
                <div class="container">
                    <div class="container">

                        @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
