                                    @Html.DropDownListFor(model => model.Product_Category, new SelectList(Model.category, "Category_ID", "Category_Name"), "Select Category", new { @class = "form-control", style = "text-align:left;font-size:20px;height:40px;border-radius:30px;;width:500px;" })
